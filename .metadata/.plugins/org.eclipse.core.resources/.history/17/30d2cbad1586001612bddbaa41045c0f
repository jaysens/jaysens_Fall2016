import java.util.*;

public class ProcessingNumbers {

	public static void main (String[] args){
		Scanner input = new Scanner(System.in);
		System.out.print("Enter the string of numbers: ");
		String numString = input.nextLine();
		
		int min = 1000000;
		int max = -1000000;
		int evenSum = 0;
		int largestEven = -1000000;
		int nextNum = 0;
		
		int index = 0;
		while(true){
			if(index == numString.length() - 1){
				if(numString.charAt(0) == '-'){
					String num = numString.substring(1, index);
					nextNum = Integer.parseInt(num) * -1;
				} else {
					String num = numString.substring(0, index);
					nextNum = Integer.parseInt(num);
				}
				
				if(nextNum%2 == 0){
					if(largestEven < nextNum){
						largestEven = nextNum;
					}
					evenSum += nextNum;
				}
			
				if(max < nextNum){
					max = nextNum;
				} 
				
				if(min > nextNum){
					min = nextNum;
				}
				
				break;
			}
			
			if(numString.charAt(index) == ' '){
				if(numString.charAt(0) == '-'){
					String num = numString.substring(1, index);
					nextNum = Integer.parseInt(num) * -1;
				} else {
					String num = numString.substring(0, index);
					nextNum = Integer.parseInt(num);
				}
				numString = numString.substring(index+1,numString.length());
					
				if(nextNum%2 == 0){
					if(largestEven < nextNum){
						largestEven = nextNum;
					}
					evenSum += nextNum;
				}
			
				if(max < nextNum){
					max = nextNum;
				} 
				
				if(min > nextNum){
					min = nextNum;
				}
			}
			index++;
		}
		System.out.println("max: " + max + " min: " + min);
		System.out.println("Sum of all even numbers: " + evenSum);
		System.out.println("Largest even number: " + largestEven);
	}

}
