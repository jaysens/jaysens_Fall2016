import java.util.*;

public class ProcessingNumbers {

	public static void main (String[] args){
		Scanner input = new Scanner(System.in);
		System.out.print("Enter the string of numbers: ");
		String numString = input.nextLine();
		
		int min = 1000000;
		int max = -1000000;
		int evenSum = 0;
		int largestEven = -1000000;
		int nextNum = 0;
		
		for(int i = 0; i < numString.length(); i++){
			if(numString.charAt(i) == ' '){
				if(numString.charAt(0) == '-'){
					String num = numString.substring(1, i);
					nextNum = Integer.parseInt(num) * -1;
				} else {
					String num = numString.substring(0, i);
					nextNum = Integer.parseInt(num);
				}
				numString = numString.substring(i+1,numString.length());
					
				if(nextNum%2 == 0){
					if(largestEven < nextNum){
						largestEven = nextNum;
					}
					evenSum += nextNum;
				}
			
				if(max < nextNum){
					max = nextNum;
				} else if(min > nextNum){
					min = nextNum;
				}
			}
		}
		System.out.println("max: " + max + " min: " + min);
		System.out.println("Sum of all even numbers: " + evenSum);
		System.out.println("Largest even number: " + largestEven);
	}

}
